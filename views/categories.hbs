<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Food Categories</h1>
        </div>
    </div>

    {{#if categories.length}}
        <div class="row justify-content-center">
            {{#each categories}}
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="item-card">
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="{{this.name}}" class="img-fluid">
                        {{else}}
                            <img src="/images/default-category.jpg" alt="Default Category" class="img-fluid">
                        {{/if}}
                        <h2>{{this.name}}</h2>
                        <a href="/items?category={{this.id}}" class="btn btn-primary">View Items</a>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="col-md-12 text-center">
            <h2>No categories available</h2>
            <p>Please check back later.</p>
        </div>
    {{/if}}
</div>
